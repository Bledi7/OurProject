@model List<OurProject.ViewModels.UserRoleViewModel>
@{
    var roleId = ViewBag.roleId;
}
<form method="post">
    <div class="card-mb-3 mt-4 ml-0">
        <div class="card-header">
            <h3>Add or remove users from this role </h3>
        </div>
        <div class="card-body">
            @for(int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model[i].UserId" />
                    <input type="hidden"  asp-for="@Model[i].UsernName"  />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input"/>
                    <labelasp-for ="@Model[i].IsSelected" class="form-check-label">
                         @Model[i].UsernName
                    </labelasp-for>
               </div>
                
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class=" btn btn-primary" style="width:auto"/>
            <a asp-action="EditRole" asp-controller="Administrator" asp-route-roleId="@roleId" class="btn btn-primary">Cancel</a>

        </div>

</form>