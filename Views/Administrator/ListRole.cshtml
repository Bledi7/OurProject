@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "All Roles";
}

<h1>All Roles</h1>
@if(Model.Any()){
    <a class="btn btn-primary mb-3 style="width:auto" asp-action="CreateRole" asp-controller="Administrator">Create new role</a>
    foreach(var role in Model)
    {
          <div class="card-mb-3 m-4">
              <div class="card-header">
                  Role Id:@role.Id
              </div>
              <div class="card-body">
                  <h5 class="card-title">@role.Name</h5>
                  </div>
              <div class="card-footer">
                   <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                  <a  class="btn btn-primary" asp-action="EditRole" asp-controller="Administrator" asp-route-id="@role.Id">Edit</a>
                <button type="submit" class="btn btn-danger">Delete</button>
                </form>
              </div>
          </div>
  }

}else{
    <div class="card ">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">Use the button below te create role</h5>
            <a class="btn btn-primary" style="width:auto" asp-controller="Administrator" asp-action="CreateRole">
                Create Role
            </a>
        </div>
    </div>
}