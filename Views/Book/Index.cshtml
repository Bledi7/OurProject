@model IEnumerable<Book>



    <div class="col-md-8 offset-md-2">
        <a class="btn btn-outline-primary" asp-action="Create">Create New</a>
  

    </div>

<div class="row">
    <div class="col-md-8 offset-md-2">
<table id="myTable" class="table">
    <thead>
        <tr>
             <th scope="col">
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Category)
            </th>

            <th scope="col">Buttons</th>
        </tr>
    </thead>
    <tbody>


        @foreach (var item in Model)
        {
            <tr>
                        <td class="align-middle">
                            @{
                                string base64 = Convert.ToBase64String(item.Image);
                                string photo = string.Format("data:image/gif;base64,{0}", base64);
                            }

                            <img class="rounded-circle" src="@photo" alt="Alternate Text" asp-append-version="true" style="max-width:75px"/>
                        </td>
                <td class="align-middle">
                    <h6>@Html.DisplayFor(modelItem => item.Author)</h6>
                </td>
                <td class="align-middle">
                    <h6> @Html.DisplayFor(modelItem => item.Title)</h6>
                </td>
                <td class="align-middle">
                    <h6>  @Html.DisplayFor(modelItem => item.Category)</h6>
                </td>

                <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details</a>
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>
